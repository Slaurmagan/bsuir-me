<!-- <h4 class="ui center aligned header">Welcome to Sign Up page</h4> -->
<div class="ui placeholder segment" id="signup__form">
  <h2 class="ui center aligned header">Sign Up page</h2>
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:user,html:{class: "ui form",role: "form"})  do |f| %>
        <div class="field">
          <%= f.label :username,"Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username,placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password,"Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password,placeholder:"Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Signup",class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big  orange disabled button">
        <i class="signup icon"></i>
        Log in
      </div>
    </div>
  </div>

</div>
